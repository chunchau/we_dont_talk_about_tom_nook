<h1>Villagers Page</h1>
<a href="/">Return Home</a>
<% villagers_api.each do |villager| %>
  <p>
    <%= p villager[1]["name"]["name-USen"] %>
    <img src="<%= villager[1]["icon_uri"] %>" alt="">
    <form action="/wishlist_villagers" method="POST">
      <input type="hidden" name="villager_name" value="<%=villager[1]["name"]["name-USen"]%>">
      <input type="hidden" name="item_id" value="<%= villager[1]["id"] %>">
      <button>Add to wishlist</button>
    </form>
  </p>
<%end%>
